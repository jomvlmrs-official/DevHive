{
  "name": "DevHive",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.java",
        "esbenp.prettier-vscode",
        "SonarSource.sonarlint-vscode",
        "visualstudioexptteam.vscodeintellicode",
        "ms-python.python",
        "ms-kotlin.kotlin",
        "eamodio.gitlens"
      ]
    }
  },
  "postCreateCommand": "wget https://download.jetbrains.com/gateway/JetBrainsGateway-latest.zip && unzip JetBrainsGateway-latest.zip -d /usr/local/bin && chmod +x /usr/local/bin/jetbrains-gateway",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  }
}